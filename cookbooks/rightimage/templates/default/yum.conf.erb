<% if @bootstrap -%>
[main]
cachedir=/var/cache/yum
debuglevel=2
logfile=/var/log/yum.log
exclude=*-debuginfo
gpgcheck=0
obsoletes=1
pkgpolicy=newest
distroverpkg=redhat-release
tolerant=1
exactarch=1
reposdir=/dev/null
metadata_expire=1800
<% end -%>


[base]
name = none
baseurl = http://<%= node[:right_image_creator][:install_mirror] %>/centos/<%= node[:right_image_creator][:release] %>/os/<%= node[:right_image_creator][:arch] %>/archive/<%= node[:right_image_creator][:install_mirror_date] %>/
failovermethod=priority
gpgcheck=1
enabled=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-CentOS-5

