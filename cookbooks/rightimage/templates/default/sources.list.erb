<% 
mirror_urls = [
  'http://'+@mirror_url,
  'http://mirror.rightscale.com',
  'http://ec2-us-east-mirror.rightscale.com',
  'http://ec2-us-west-mirror.rightscale.com'
] 
mirror_types = [
  {:suffix =>'', :enabled=>true, :description => 'MAIN'},
  {:suffix =>'-updates', :enabled=>true, :description => 'MAJOR BUG FIX UPDATES produced after the final release'},
  {:suffix =>'-security', :enabled=>true, :description => 'UBUNTU SECURITY UPDATES'},
  {:suffix =>'-backports', :enabled=>false, :description => 'BACKPORTS REPOSITORY (Unsupported.  May contain illegal packages.  Use at own risk.)'}
] 
mirror_types.each do |attr| %>
## <%=attr[:description] %>
<% mirror_urls.each do |mirror_url| %>
<%=attr[:enabled] ? "" : "#"%>deb <%=mirror_url%>/ubuntu_daily/<%=@mirror_date%>/ <%=@platform_codename%><%=attr[:suffix]%> main restricted universe multiverse
<% end %>
#deb-src http://archive.ubuntu.com/ubuntu/ <%=@platform_codename%><%=attr[:suffix]%> main restricted universe multiverse

<% end %>

## RIGHTSCALE REPOSITORY
<% if @use_staging_mirror.to_s == "true" %>
deb http://rightscale-software-staging.s3.amazonaws.com/ubuntu <%= @platform_codename %> main
<% else %>
<% mirror_urls.each do |mirror_url| %>
deb <%=mirror_url%>/rightscale_software_ubuntu/<%=@mirror_date%>/ <%=@platform_codename%> main
<% end %>
<% end %>