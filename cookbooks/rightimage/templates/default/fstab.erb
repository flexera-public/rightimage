<%= node[:right_image_creator][:root_mount] %>  /         ext3    defaults        0 0
<%= node[:right_image_creator][:ephemeral_mount] %>   /mnt      ext3    <%= node[:right_image_creator][:fstab][:ephemeral_mount_opts] %>        0 0
<% if @node[:right_image_creator][:swap_mount] -%>
<%= node[:right_image_creator][:swap_mount] %>  swap      swap    <%= node[:right_image_creator][:fstab][:swap_mount_opts] %>        0 0
<% end -%>
<% if @node[:right_image_creator][:platform] == "centos" -%>
none       /dev/pts  devpts  gid=5,mode=620  0 0
none       /dev/shm  tmpfs   defaults        0 0
<% end -%>
none       /proc     proc    defaults        0 0
none       /sys      sysfs   defaults        0 0

