[main]
cachedir=/var/cache/yum
keepcache=0
debuglevel=2
logfile=/var/log/yum.log
distroverpkg=redhat-release
tolerant=1
exactarch=1
obsoletes=1
<% if @bootstrap -%>
exclude=*-debuginfo
gpgcheck=0
pkgpolicy=newest
reposdir=/dev/null
pluginpath=/tmp/yum/yum-plugins
pluginconfpath=/tmp/yum/pluginconf.d
<% else -%>
gpgcheck=1
plugins=1
<% end -%>
metadata_expire=1h

<% if @host -%>
[rhui-us-east-rhel-server]
name=Red Hat Enterprise Linux Server (RPMs)
baseurl=https://rhui.us-east-1.aws.ce.redhat.com/rhuilb/content/dist/rhel/rhui/server/5Server/<%= node[:rightimage][:arch] %>/os
enabled=1
gpgcheck=1
gpgkey=file:///tmp/etc/pki/rpm-gpg/RPM-GPG-KEY-redhat-release file:///tmp/etc/pki/rpm-gpg/RPM-GPG-KEY-redhat-auxiliary file:///tmp/etc/pki/rpm-gpg/RPM-GPG-KEY-redhat-beta
sslverify=1
sslclientkey=/tmp/etc/pki/entitlement/key.pem
sslclientcert=/tmp/etc/pki/entitlement/product/content.crt
sslcacert=/tmp/etc/pki/entitlement/ca.crt

#[epel]
#name = none
#baseurl = http://ec2-us-east-mirror.rightscale.com/epel/5/i386/archive/latest
# http://ec2-us-east-mirror1.rightscale.com/epel/5/i386/archive/latest
# http://ec2-us-east-mirror2.rightscale.com/epel/5/i386/archive/latest
# http://ec2-us-east-mirror3.rightscale.com/epel/5/i386/archive/latest
#failovermethod=priority
#gpgcheck=1
#enabled=1
#gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-EPEL

#RightScale: do not allow collectd version to be modified.
#Collectd packages handled by SYS Monitoring install rightscript
#exclude=collectd
<% end -%>
