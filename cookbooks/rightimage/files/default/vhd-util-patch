+off_t
+get_file_size_rev(const char *name)
+{
+	int fd;
+	off_t end;
+
+	fd = open(name, O_LARGEFILE | O_RDONLY);
+	if (fd == -1) {
+		VHDLOG("unable to open '%s': %d\n", name, errno);
+		return -errno;
+	}
+	end = lseek(fd, 0, SEEK_END);
+	close(fd); 
+	return end;
+}
